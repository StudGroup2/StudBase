<Window x:Class="StudBaseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudBaseWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>

            <ImageBrush/>

        </Grid.Background>

        <Image Source="zxc.jpg" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Button Content="База данных" HorizontalAlignment="Left" Margin="287,198,0,0" VerticalAlignment="Top" Width="700" Height="100" Grid.ColumnSpan="2" FontSize="24" FontFamily="Arial Black" BorderBrush="#FF707070" Click="Button_Click_2"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="287,548,0,0" VerticalAlignment="Top" Width="700" Height="100" Click="Button_Click" Grid.ColumnSpan="2" FontFamily="Arial Black" FontSize="24"/>
        <Button Content="Авторы" HorizontalAlignment="Left" Margin="287,371,0,0" VerticalAlignment="Top" Width="700" Height="100" Grid.ColumnSpan="2"  Click="Button_Click_1" FontSize="24" FontFamily="Arial Black"/>
        <Menu Margin="0,0,0,658" Grid.ColumnSpan="2">
            <MenuItem Header="File" FontSize="16" Height="19" Width="60">
                <MenuItem Header="New"></MenuItem>
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="SaveAs..."></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" Height="19" Width="60" FontSize="16">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
                <Separator/>
                <MenuItem Header="Cut"/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
